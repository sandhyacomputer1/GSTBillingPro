<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingBottom="20dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_drag_handle" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Invoices"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <!-- Show All -->
        <LinearLayout
            android:id="@+id/tvFilterAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="ðŸ“Š"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show All Invoices"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginStart="12dp" />

            <ImageView
                android:id="@+id/ivCheckAll"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="visible"
                app:tint="#4CAF50" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginVertical="4dp" />

        <!-- Show Pending Only -->
        <LinearLayout
            android:id="@+id/tvFilterPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="âš ï¸"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Pending Only"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginStart="12dp" />

            <ImageView
                android:id="@+id/ivCheckPending"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="#4CAF50" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginVertical="4dp" />

        <!-- Show Paid Only -->
        <LinearLayout
            android:id="@+id/tvFilterPaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="âœ…"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Paid Only"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginStart="12dp" />

            <ImageView
                android:id="@+id/ivCheckPaid"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Custom Date Range Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <!-- Custom Date Range -->
        <LinearLayout
            android:id="@+id/tvFilterCustomDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="14dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="ðŸ“…"
                android:textSize="20sp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Date Range"
                    android:textSize="16sp"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvSelectedDateRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select date range"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivCheckCustomDate"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="#4CAF50" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetFilter"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Reset"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textStyle="bold"
            app:strokeColor="#E0E0E0"
            app:cornerRadius="8dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplyFilter"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Apply"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#1976D2"
            app:cornerRadius="8dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>