<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="4dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- LEFT SECTION: CUSTOMER INFO & AMOUNTS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CUSTOMER NAME -->
            <TextView
                android:id="@+id/tvCustomerName"
                android:text="Customer Name"
                android:textSize="14sp"
                android:textColor="#474747"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- INVOICE NO & DATE -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tvInvoiceNo"
                    android:text="INV-001"
                    android:textSize="11sp"
                    android:textColor="#1976D2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="•"
                    android:textSize="11sp"
                    android:textColor="#BDBDBD"
                    android:paddingHorizontal="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:text="Dec 15"
                    android:textSize="11sp"
                    android:textColor="#757575"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- AMOUNTS - SIMPLIFIED PENDING DISPLAY -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:text="₹15,850"
                    android:textSize="14sp"
                    android:textColor="#474747"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- PENDING AMOUNT TEXT ONLY -->
                <TextView
                    android:id="@+id/tvPendingAmount"
                    android:text="Pending ₹5,250"
                    android:textSize="12sp"
                    android:textColor="#D32F2F"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </LinearLayout>

        <!-- HIDDEN FIELDS -->
        <TextView
            android:id="@+id/tvCustomerId"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <!-- RIGHT SECTION: REMIND BUTTON (END POSITION) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/tvViewDetails"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                android:padding="6dp"
                app:tint="#1976D2"/>

            <!-- REMIND BUTTON - SAME POSITION AS OLD SHARE -->
            <TextView
                android:id="@+id/tvRemind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remind"
                android:textSize="12sp"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:minWidth="60dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
