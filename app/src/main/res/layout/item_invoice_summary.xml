<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:fitsSystemWindows="true"

    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Left Side: Invoice Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInvoiceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INV-20251107-843166"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#1A73E8" />

        <TextView
            android:id="@+id/tvInvoiceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-11-07"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvInvoiceTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹1,12,000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Right Side: Forward Arrow -->
    <TextView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:drawableStart="@drawable/ic_arrow_forward"
        android:contentDescription="Open invoice"
        android:tint="#000000"/>

</LinearLayout>