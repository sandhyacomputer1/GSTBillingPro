<!-- In: res/layout/fragment_product.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ProductFragment">

    <!-- Search and Product Count -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:iconifiedByDefault="false"
            android:queryHint="Search Products..." />

        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="bold"
            tools:text="Total Products: 125" />

    </LinearLayout>

    <!--
        CHANGE 1:
        The RecyclerView's layout_above attribute is removed.
        It now fills the space behind the floating buttons.
        A bottom padding is added to prevent the last item from being hidden.
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="80dp"
        tools:listitem="@layout/item_product" />

    <!--
        This CardView is hidden and only used for its content in the dialog.
        Its position in the XML file no longer matters visually.
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/import_instructions_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#F1F1F1"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        tools:visibility="visible" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/import_instructions"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


    <!--
       CHANGE 2:
       The buttons are now floating over the RecyclerView because they are
       drawn on top of it within the RelativeLayout.
   -->
    <!-- Import Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnImportProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/blue"
        android:text="Import"
        app:icon="@android:drawable/stat_sys_upload" />

    <!-- Add Product FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/blue"
        android:contentDescription="Add new product"
        android:src="@android:drawable/ic_input_add"
        app:tint="@android:color/white" />

</RelativeLayout>
