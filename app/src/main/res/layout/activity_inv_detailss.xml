<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Card -->
        <!-- Header Card - Updated with Edit & Delete -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp"
            android:backgroundTint="#1976D2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <!-- Business Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Business Name -->
                    <TextView
                        android:id="@+id/tvBusinessName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patil Hardware"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <!-- Address -->
                    <TextView
                        android:id="@+id/tvBusinessAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Address"
                        android:textSize="13sp"
                        android:textColor="#E3F2FD"
                        android:layout_marginTop="4dp" />

                    <!-- GSTIN -->
                    <TextView
                        android:id="@+id/tvBusinessGstin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GSTIN: 27XXXXX"
                        android:textSize="12sp"
                        android:textColor="#E3F2FD"
                        android:layout_marginTop="2dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp" />

                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Delete"
                        app:tint="#FFFFFF"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Invoice Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Invoice Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B" />

                    <!-- Payment Status Badge -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPaymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        app:chipBackgroundColor="#4CAF50"
                        app:chipCornerRadius="12dp"
                        app:chipMinHeight="24dp"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F1F5F9"
                    android:layout_marginVertical="12dp" />

                <!-- Invoice Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Invoice No."
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvInvoiceNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INV-001"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <!-- Invoice Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvInvoiceDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-12-15"
                        android:textSize="13sp"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <!-- Customer Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Customer"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <!-- Customer Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvCustomerPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 9876543210"
                        android:textSize="13sp"
                        android:textColor="#1E293B" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Invoice Items Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bill Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="12dp" />

                <!-- Taxable Value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Taxable Value"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvTotalTaxable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="13sp"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <!-- CGST -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="CGST"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvCGST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="13sp"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <!-- SGST -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="SGST"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvSGST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="13sp"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <!-- IGST -->
                <LinearLayout
                    android:id="@+id/layoutIGST"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="IGST"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvIGST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="13sp"
                        android:textColor="#1E293B" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F1F5F9"
                    android:layout_marginVertical="8dp" />

                <!-- Grand Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Grand Total"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B" />

                    <TextView
                        android:id="@+id/tvGrandTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="12dp" />

                <!-- Payment Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Payment Status"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                </LinearLayout>

                <!-- Payment Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Payment Mode"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvPaymentModeIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’µ"
                            android:textSize="16sp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/tvPaymentMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#1E293B" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Paid Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Paid Amount"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvPaidAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />

                </LinearLayout>

                <!-- Pending Amount -->
                <LinearLayout
                    android:id="@+id/layoutPending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Pending Amount"
                        android:textSize="13sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/tvPendingAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#EF4444" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Payment History Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvPaymentHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#FFFFFF"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment History"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPayments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>