<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"


    >

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_header_gradient"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Reports"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateInvoicesPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Invoices PDF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:icon="@drawable/ic_file_pdf"
                app:iconPadding="8dp"
                app:iconTint="#0D47A1"
                android:textColor="#0D47A1"
                android:paddingVertical="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateCustomersPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Customers PDF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:icon="@drawable/ic_file_pdf"
                app:iconPadding="8dp"
                app:iconTint="#0D47A1"
                android:textColor="#0D47A1"
                android:paddingVertical="12dp"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerateProductsPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Products PDF"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:icon="@drawable/ic_file_pdf"
                app:iconPadding="8dp"
                app:iconTint="#0D47A1"
                android:textColor="#0D47A1"
                android:paddingVertical="12dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
