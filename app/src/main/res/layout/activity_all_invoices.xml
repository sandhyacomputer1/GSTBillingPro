<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F8FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ Blue toolbar with back button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAllInvoices"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="All Invoices"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Keep your existing EditText and RecyclerView below -->
    <EditText
        android:id="@+id/etSearchInvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by Customer or Invoice No"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:background="@drawable/bg_searchview_rounded"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_margin="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAllInvoices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="10dp" />

</LinearLayout>
