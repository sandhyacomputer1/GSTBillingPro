<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Top Row: Name + Edit/Delete Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Customer Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <ImageButton
                android:id="@+id/btnEditCustomer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit Customer"
                 />

            <ImageButton
                android:id="@+id/btnDeleteCustomer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="8dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete Customer"
                />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:background="#E0E0E0" />

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvCustomerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" +91 9876543210"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvCustomerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" customer@email.com"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvCustomerGstin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" GSTIN: 22AAAAA0000A1Z5"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvCustomerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 123 Street Name, City"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
