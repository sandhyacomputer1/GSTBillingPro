<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardInvoice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Invoice Number -->
        <TextView
            android:id="@+id/tvInvoiceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice #INV-20251103"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <!-- Customer Name -->
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sagar Patil"
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginTop="4dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 Nov 2025"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"/>

        <!-- Amount Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Total Amount -->
            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1,250"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue"/>

            <!-- Pending Badge -->
            <TextView
                android:id="@+id/tvPendingAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending ₹500"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textColor="#C62828"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:visibility="gone" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Reminder Text -->
            <TextView
                android:id="@+id/tvReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/bg_reminder_small"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>