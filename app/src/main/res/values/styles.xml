<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavTextSelected" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextNormal" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    <!-- Bottom navigation text when selected -->
    <style name="BottomNav.Text.Selected" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Bottom navigation text when not selected -->
    <style name="BottomNav.Text.Normal" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!-- Style for the label of a detail row (e.g., "HSN Code") -->
    <style name="DetailLabelText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Style for the value of a detail row (e.g., "998877") -->
    <style name="DetailValueText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
